<Window x:Class="ZullaWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZullaWpf"
        mc:Ignorable="d"
        Title="Dance Class Manager" Height="600" Width="1000"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="DANCE CLASS MANAGER"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"
                   Grid.ColumnSpan="2"/>

        <!-- Input Form -->
        <Border Background="White" CornerRadius="10" Padding="20"
                Margin="20,80,10,20" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="Dance Class Details" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Title:" Width="100"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Dance Style:" Width="100"/>
                    <TextBox Text="{Binding DanceStyle, UpdateSourceTrigger=PropertyChanged}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Instructor:" Width="100"/>
                    <TextBox Text="{Binding Instructor, UpdateSourceTrigger=PropertyChanged}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Schedule:" Width="100"/>
                    <TextBox Text="{Binding Schedule, UpdateSourceTrigger=PropertyChanged}" Width="250"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Save"
                            Command="{Binding SaveCommand}"
                            Width="100"
                            Height="35"
                            Margin="5"
                            Background="#0078D7"
                            Foreground="White"
                            FontWeight="Bold"/>

                    <Button Content="Delete"
                            Command="{Binding DeleteCommand}"
                            Width="100"
                            Height="35"
                            Margin="5"
                            Background="#D32F2F"
                            Foreground="White"
                            FontWeight="Bold"/>

                    <Button Content="Clear"
                            Command="{Binding ClearCommand}"
                            Width="100"
                            Height="35"
                            Margin="5"
                            Background="#757575"
                            Foreground="White"
                            FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Data Grid -->
        <Border Background="White" CornerRadius="10" Padding="20"
                Margin="10,80,20,20" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Dance Classes" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Grid.Row="0"/>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding DanceClasses}"
                          SelectedItem="{Binding SelectedDanceClass}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                        <DataGridTextColumn Header="Dance Style" Binding="{Binding DanceStyle}" Width="*"/>
                        <DataGridTextColumn Header="Instructor" Binding="{Binding Instructor}" Width="*"/>
                        <DataGridTextColumn Header="Schedule" Binding="{Binding Schedule}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>
